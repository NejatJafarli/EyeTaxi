                        <hc:PasswordBox
Foreground="Black"
                            Grid.Row="3"
                            Margin="10"
                            Name="RegPass"
                            hc:InfoElement.Placeholder="Password"
                            ShowClearButton="True"
                            ShowEyeButton="True">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="Loaded">
                                    <b:InvokeCommandAction Command="{Binding RegPasswordLoadedCommand}" CommandParameter="{Binding ElementName=RegPass}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </hc:PasswordBox>

