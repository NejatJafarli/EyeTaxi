    <hc:TransitioningContentControl TransitionMode="Top2Bottom">
        <materialDesign:Card
            Name="Border"
            Width="350"
            Margin="40"
            materialDesign:ShadowAssist.ShadowDepth="Depth5"
            materialDesign:ShadowAssist.ShadowEdges="All"
            Background="White"
            UniformCornerRadius="5">
            <Grid>
                <Grid Name="RegView" Visibility="{Binding RegViewVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="Product Sans"
                                FontSize="30"
                                FontWeight="Bold"
                                Text="Welcome" />
                            <Viewbox
                                Grid.Column="1"
                                Width="50"
                                Margin="0,5,50,5"
                                HorizontalAlignment="Right">
                                <hc:AnimationPath
                                    VerticalAlignment="Center"
                                    Data="{StaticResource Taxi}"
                                    PathLength="40"
                                    Stroke="#FFB626"
                                    StrokeThickness="20"
                                    Duration="00:00:3" />
                            </Viewbox>
                            <Button
                                Grid.Column="1"
VerticalAlignment="Center"
                    Width="25"
                    Height="25"
                    Margin="0,0,10,10"
                    Padding="7"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
HorizontalAlignment="Right"
                    hc:BackgroundSwitchElement.MouseDownBackground="PaleVioletRed"
                    hc:BackgroundSwitchElement.MouseHoverBackground="Red"
                    hc:BorderElement.CornerRadius="25"
                    hc:IconElement.Geometry="{StaticResource DeleteGeometry}"
                    Background="#4760F3"
                    Style="{StaticResource ButtonCustom}">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <b:InvokeCommandAction Command="{Binding CloseButtonClickCommand}" CommandParameter="{Binding ElementName=window}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <materialDesign:PackIcon
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Kind="Close" />
                            </Button>
                        </Grid>
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Button
                                Margin="10"
                                HorizontalAlignment="Left"
                                Content="Registration">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="Click">
                                        <b:InvokeCommandAction Command="{Binding RegBtnClickCommand}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Button>
                            <Button
                                Margin="10"
                                HorizontalAlignment="Right"
                                Content="Login"
                                Style="{StaticResource MaterialDesignFlatButton}">

                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="Click">
                                        <b:InvokeCommandAction Command="{Binding LogBtnClickCommand}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                            </Button>
                        </Grid>
                        <hc:TextBox
                            Grid.Row="2"
                            Margin="10"
Foreground="Black"
                            hc:InfoElement.Placeholder="Username"
                            Text="{Binding RegUsernameText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
